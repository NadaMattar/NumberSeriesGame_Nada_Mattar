<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ac_item_all_game_bg"
        android:orientation="horizontal"   >

        <TextView
            android:id="@+id/card_score"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="30"
            android:textStyle="bold"
            android:background="@drawable/item_bc_score"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nadoosha"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#D2C3CCDB"
                />
            <TextView
                android:id="@+id/card_timeAndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Naddooosha"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#A8E8EDF4"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>