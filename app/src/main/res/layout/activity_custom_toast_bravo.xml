<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_toast"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/toast_message_bravo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_toast_bravo"
        android:gravity="center"
        android:text="@string/toast_bravo"
        android:textColor="#FFEDB8"
        android:textSize="30sp"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bravooo"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bravo"
        >

    </pl.droidsonroids.gif.GifImageView>
</LinearLayout>